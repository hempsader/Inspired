<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ionut.grigore.inspired">
    <permission android:name="com.ionut.grigore.inspired.PRIVATE"
        android:protectionLevel="signature"/>
    <permission
        android:name="com.ionut.grigore.inspired.PRIVATE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.ionut.grigore.inspired.PRIVATE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.example.inspired.PRIVATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission
        android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"/>
    <application
        android:name=".view.GlobalApp"
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name=".view.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".view.OnBoardActivity"
            android:label="OnBoardActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
           />
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".viewModel.fetching.BroadcastAppForeground"
            android:permission="com.ionut.grigore.inspired.PRIVATE"
            android:exported="false">
            <intent-filter>
                <action android:name="com.ionut.grigore.inspired.SHOW_NOTIFICATION"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".viewModel.fetching.NotificationFavBroadcast" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>