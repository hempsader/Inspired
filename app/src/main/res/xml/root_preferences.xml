<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <SwitchPreferenceCompat
            app:key="room"
            app:title="Enable quote catch offline" />
        <SwitchPreferenceCompat
            app:key="colors"
            app:title="Each quote have different color" />
        <ListPreference
            app:entries="@array/hour_entries"
            app:entryValues="@array/hour_values"
            app:key="daily"
            app:title="Notification hour" />
        <SwitchPreferenceCompat
            app:key="daily_quote"
            app:summaryOff="Daily quote disabled"
            app:summaryOn="Daily quote enabled"
            app:title="Daily Quote" />
        <PreferenceCategory app:title="@string/messages_header">

        <EditTextPreference
            app:key="signature"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="reply"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="reply"
            app:title="@string/reply_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
        <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/sync_title" />

        <SwitchPreferenceCompat
            app:key="attachment"
            app:summaryOff="@string/attachment_summary_off"
            app:summaryOn="@string/attachment_summary_on"
            app:title="@string/attachment_title"
            app:dependency="sync" />

    </PreferenceCategory>
</PreferenceScreen>